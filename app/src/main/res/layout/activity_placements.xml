<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.android.codeshala.Placements">

    <TextView
        android:id="@+id/T1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="#cbd242"
        android:textSize="30dp"
        android:text="Stats that make us proud"
        />
    <ScrollView
        android:id="@+id/sc"
        android:layout_below="@id/T1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="vertical"
        android:background="#e69f9f"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="Students trained-"
            />
        <TextView
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_below="@id/a1"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="400+"
            />
        <TextView
            android:id="@+id/a3"
            android:layout_below="@id/a2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:text="Placements-"
            />
        <TextView
            android:id="@+id/a4"
            android:layout_below="@id/a3"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="300+"
            />
        <TextView
            android:id="@+id/a5"
            android:layout_below="@id/a4"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:text="Hours of teaching-"
            />
        <TextView
            android:id="@+id/a6"
            android:layout_below="@id/a5"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="1100+"
            />
        <TextView
            android:id="@+id/a7"
            android:layout_below="@id/a6"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:text="Projects"
            />
        <TextView
            android:id="@+id/a8"
            android:layout_below="@id/a7"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="12+"
            />
        </RelativeLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/sc2"
        android:layout_below="@id/sc"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scrollbars="vertical"
        android:background="#ef8989"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="Students placed in MNC's like-" />
            <TextView
                android:id="@+id/b2"
                android:layout_below="@id/b1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="AMAZON" />

            <TextView
                android:id="@+id/b3"
                android:layout_below="@id/b2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="SQUADRUN" />
            <TextView
                android:id="@+id/b4"
                android:layout_below="@id/b3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="SAMSUNG" />
            <TextView
                android:id="@+id/b5"
                android:layout_below="@id/b4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="ADOBE" />
            <TextView
                android:id="@+id/b6"
                android:layout_below="@id/b5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="1MG" />
            <TextView
                android:id="@+id/b7"
                android:layout_below="@id/b6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="HCL" />
            <TextView
                android:id="@+id/b8"
                android:layout_below="@id/b7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="PAYTM" />
            <TextView
                android:id="@+id/b9"
                android:layout_below="@id/b8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="POSIST" />
            <TextView
                android:id="@+id/b10"
                android:layout_below="@id/b9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="SMARTPRIX" />
            <TextView
                android:id="@+id/b11"
                android:layout_below="@id/b10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="TCS" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>